---
import { loadChatMessages } from '../utils/chatSimulator';

const chatMessages = await loadChatMessages();
---

<div class="twitch-chat">
  <div class="twitch-chat__header">
    <span class="twitch-chat__title">Chat en vivo</span>
    <span class="twitch-chat__badge">LIVE</span>
  </div>

  <div id="chat-messages" class="twitch-chat__messages">
    {chatMessages
      .slice()
      .sort((a, b) => a.time - b.time)
      .map((msg) => (
        <div class="twitch-chat__line">
          <span class="twitch-chat__user" style={`color: ${msg.userColor}`}>{msg.userName}</span>
          <span class="twitch-chat__separator">:</span>
          <span class="twitch-chat__text">{msg.message}</span>
        </div>
      ))}
  </div>
</div>

<style>
  .twitch-chat {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #0e0e10;
    border: 1px solid #1f1f23;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 0 0 1px rgba(145, 70, 255, 0.15);
  }

  .twitch-chat__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    background: #18181b;
    border-bottom: 1px solid #26262c;
  }

  .twitch-chat__title {
    color: #efeff1;
    font-weight: 600;
    font-size: 0.95rem;
    letter-spacing: 0.2px;
  }

  .twitch-chat__badge {
    background: #e91916;
    color: #ffffff;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 2px 8px;
    border-radius: 999px;
    letter-spacing: 0.5px;
  }

  .twitch-chat__messages {
    flex: 1;
    overflow-y: auto;
    padding: 12px 16px 18px;
    font-family: 'Inter', 'Roobert', 'Helvetica Neue', Arial, sans-serif;
    font-size: 0.95rem;
    color: #efeff1;
    background: #0e0e10;
  }

  .twitch-chat__line {
    display: flex;
    align-items: baseline;
    gap: 0;
    line-height: 1.5;
    padding: 2px 0;
    word-break: break-word;
  }

  .twitch-chat__user {
    font-weight: 600;
    text-shadow: 0 0 6px rgba(145, 70, 255, 0.15);
  }

  .twitch-chat__separator {
    color: #efeff1;
  }

  .twitch-chat__text {
    margin-left: 6px;
    color: #efeff1;
  }

  .twitch-chat__messages::-webkit-scrollbar {
    width: 10px;
  }

  .twitch-chat__messages::-webkit-scrollbar-track {
    background: #0e0e10;
  }

  .twitch-chat__messages::-webkit-scrollbar-thumb {
    background: #2a2a2e;
    border-radius: 999px;
    border: 2px solid #0e0e10;
  }

  .twitch-chat__messages::-webkit-scrollbar-thumb:hover {
    background: #3a3a3f;
  }
</style>

