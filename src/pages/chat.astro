---
import Layout from '../layouts/Layout.astro';
import ChatSimulator from '../components/ChatSimulator.astro';
---

<Layout title="Chat Simulator">
  <main class="h-screen flex flex-col p-4">
    <header class="mb-4 flex items-center justify-between">
      <div>
        <h1 class="text-3xl text-purple-400">Chat Simulator</h1>
        <p class="text-gray-400">Simulación tipo Twitch</p>
      </div>

      <a href="/" class="text-sm text-gray-400 hover:text-white">
        ← Volver
      </a>
    </header>

    <div class="flex-1">
      <ChatSimulator />
    </div>
  </main>
</Layout>
