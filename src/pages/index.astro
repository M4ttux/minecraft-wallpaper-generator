---
import Layout from "../layouts/Layout.astro";
import WallpaperGenerator from "../components/WallpaperGenerator.astro";
---

<Layout title="Minecraft Wallpaper Generator">
  <main class="h-screen overflow-hidden flex flex-col p-4">
    <div
      class="max-w-7xl mx-auto w-full flex flex-col"
      style="height: calc(100vh - 2rem);"
    >
      <header class="mb-4 flex-shrink-0 flex items-center justify-between">
        <div>
          <h1 class="text-4xl text-minecraft-green mb-2">Minecraft</h1>
          <p class="text-gray-400">Wallpaper Generator</p>
        </div>

        <a
          href="/chat"
          class="px-4 py-2 rounded-lg bg-purple-600 hover:bg-purple-700 transition text-white text-sm"
        >
          Chat Simulator
        </a>
      </header>

      <div class="flex-1 overflow-hidden">
        <WallpaperGenerator />
      </div>
    </div>
  </main>
</Layout>
